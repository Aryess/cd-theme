{# special-header.twig #}
{% block content %}
<div class="special-header">
      <div class="row">
        <div class="col-md-2">
          <div class="image-container">
            <div class="image-crop"><img src="{{post.company_logo}}" border="0"></div>
          </div>
        </div>
        <div class="col-md-8">
          <div id="title">{{post.company_name}}</div>
          <div id="link">{{post.company_url}}</div>
        </div>
      </div>
</div>
<div class="special-header-body">
  <div class="row">
    <div class="col-md-2"> </div>
    <div class="col-md-8">
      {{post.company_bio}}
    </div>
  </div>
</div>
{% endblock %}
