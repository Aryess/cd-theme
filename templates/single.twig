{% extends "base.twig" %}

{% block content %}
	<div class="article-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				{% if post.company_name %}
					{% include "company-header.twig" with { 'post':post } %}
                                {% elseif post.people_name %}
					{% include "people.twig" with { 'post':post } %}
				{% endif %}

			 	{% include "share-widget.twig" with {'post':post} %}
				 <header class="article-header">
				 	{{post.title}}
				 </header>

				 <section class="article-subhead">
				 	{{post.post_date|date('j F Y')}} Â· by {{post.author.name}}
				 </section>

				<div class="article-body">
					{{post.content}}
				</div>


				{% if post.meta('video') and post.meta('video-poster') %}
<video style="position:relative; width:125%; left:-12.5%;" controls poster="{{post.meta('video-poster').guid}}">
  <source src="{{post.meta('video').guid|replace({'.mp4':'.ogg'})}}" type="video/ogg">
  <source src="{{post.meta('video').guid|replace({'.ogg':'.mp4'})}}" type="video/mp4">
  Your browser does not support HTML5 video.
</video>
				{% else %}
					<hr />
				{% endif %}

				{% include "article-signature.twig" with {'post':post} %}

			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}
