{% extends "base.twig" %}

{% block content %}
<div class="content-wrapper">
  {% include "carousel.twig" with
  {'imageOne': 'https://placehold.it/1280x500', 'imageTwo': 'https://placehold.it/1280x500', 'imageTwo': 'https://placehold.it/1280x500',
    'captionOne': 'Awesome', 'captionTwo': 'Awesome', 'captionThree': 'Awesome',
    'hrefOne': '', 'hrefTwo': '', 'hrefThree': '' } %}
  <article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
    <section class="article-content">
      <div class="article-wrapper">
        <div class="article-body">
          {{broken_content[1]}}
          <h1>Other news</h1>
          {{recent[0]}}
          <div class="row older-news">
            <div class="col-md-3">
              <img src="{{latest[0].thumbnail.src}}">
              <p>{{posts[3].article_desc}}</p> <a href="{{latest[0].link}}">Read.</a>
            </div>
            <div class="col-md-3">
              <img src="{{latest[1].thumbnail.src}}">
              <p>{{posts[4].article_desc}}</p> <a href="{{latest[1].link}}">Read.</a>
            </div>
            <div class="col-md-3">
              <img src="{{latest[2].thumbnail.src}}">
              <p>{{posts[5].article_desc}}</p> <a href="{{latest[2].link}}">Read.</a>
            </div>
            <div class="col-md-3">
              <img src="{{latest[3].thumbnail.src}}">
              <p>{{posts[6].article_desc}}</p> <a href="{{latest[3].link}}">Read.</a>
            </div>
          </div>
        </div>
      </div>
      <div class="article-wrapper">
        <div class="article-body">
          <div class="tool-pagination">
            <ul class="pages">
              <h1>All news</h1>
                {% for post in posts %}
                    <li class="article-pagination">
                        {% if post.link %}
                            <a href="{{post.link}}" class="{{post.class}}">{{post.title}}</a>
                            <img src="{{post.thumbnail.src}}"/>
                            <hr>
                        {% else %}
                            <span class="{{post.class}}">{{post.title}}</span>
                            <img src="{{post.thumbnail.src}}"/>
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
            {% if pagination.prev %}
                <a href="{{pagination.prev.link}}" class="prev {{pagination.prev.link|length ? '' : 'invisible'}}"><button class="btn btn-default">Previous</button></a>
            {% endif %}
            {% if pagination.next %}
                <a href="{{pagination.next.link}}" class="next {{pagination.next.link|length ? '' : 'invisible'}}"><button class="btn btn-default">Next</button></a>
             {% endif %}
          </div>
        </div>
      </div>
    </section>
  </article>
</div><!-- /content-wrapper -->
{% endblock %}
