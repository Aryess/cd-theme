{% extends "base.twig" %}

{% block content %}
<div class="content-wrapper">
  {% include "carousel.twig" with
  {'imageOne': 'https://placehold.it/1280x500', 'imageTwo': 'https://placehold.it/1280x500', 'imageTwo': 'https://placehold.it/1280x500',
    'captionOne': 'Awesome', 'captionTwo': 'Awesome', 'captionThree': 'Awesome',
    'hrefOne': '', 'hrefTwo': '', 'hrefThree': '' } %}
  <article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
    <section class="article-content">
      <div class="article-wrapper">
        {% include "item-box.twig" with {'title': 'Featured Stories', 'rows': 3 } %}
      </div>
      <div class="article-wrapper">
        <div class="article-body">
          {{broken_content[1]}}
          <h1>Older news</h1>
          <div class="row">
            <div class="col-md-3">
              <img src="https://placehold.it/175X150">
            </div>
            <div class="col-md-3">
              <img src="https://placehold.it/175X150">
            </div>
            <div class="col-md-3">
              <img src="https://placehold.it/175X150">
            </div>
            <div class="col-md-3">
              <img src="https://placehold.it/175X150">
            </div>
          </div>
        </div>
      </div>
      <div class="article-wrapper">
        <div class="article-body">
          <div class="tool-pagination">
            {% if pagination.prev %}
                <a href="{{pagination.prev.link}}" class="prev {{pagination.prev.link|length ? '' : 'invisible'}}">Prev</a>
            {% endif %}
            <ul class="pages">
                {% for post in posts %}
                    <li>
                        {% if post.link %}
                            <a href="{{page.link}}" class="{{page.class}}">{{post.title}}</a>
                            <hr>
                        {% else %}
                            <span class="{{post.class}}">{{post.title}}</span>
                            <p>Hello</p>
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
            {% if pagination.next %}
                <a href="{{pagination.next.link}}" class="next {{pagination.next.link|length ? '' : 'invisible'}}">Next</a>
            {% endif %}
          </div>
        </div>
      </div>
    </section>
  </article>
</div><!-- /content-wrapper -->
{% endblock %}
